#include <stdio.h> int main() {
int n, i; float marks[100], 
sum = 0.0, average; 
printf("Enter the number of subjects: "); 
scanf("%d", &n); //
Input marks for(i = 0; i < n; i++) { printf("Enter marks for subject %d: ", i + 1);
scanf("%f", &marks[i]); sum += marks[i]; }
// Calculate average average = sum / n;
// Display result printf("The average marks of the student = %.2f\n", average); 
return 0; 
}
